<?xml version="1.0" encoding="utf-8"?>

<launch>

  <arg name="rviz" default="true" />
  <arg name="scanPeriod" default="0.1" />
  <arg name="imuHistorySize" default="10" />


  <node pkg="loam_velodyne" type="multiScanRegistration" name="multiScanRegistration" output="screen">
    <param name="lidar" value="VLP-16" /> <!-- options: VLP-16  HDL-32  HDL-64E -->
    <!-- configuration: kitti->HDL-64E -->
    <remap from="/multi_scan_points" to="/velo_pointsTransformed"/>
    <remap from="/imu/data" to="/imu/imu"/>
    <param name="imuHistorySize" value="$(arg imuHistorySize)" />

  </node>

  <node pkg="loam_velodyne" type="laserOdometry" name="laserOdometry" output="screen" respawn="true">
    <param name="scanPeriod" value="$(arg scanPeriod)" />
  </node>

  <node pkg="loam_velodyne" type="laserMapping" name="laserMapping" output="screen">
    <remap from="/imu/data" to="/imu/imu"/>
    <rosparam command="load" file="$(find 3D_Slam_tools)/config/param.yaml" />
  </node>

  <node pkg="loam_velodyne" type="transformMaintenance" name="transformMaintenance" output="screen">
  </node>
  
  <node pkg="loam_velodyne" type="motionRemoval" name="motionRemoval" output="screen">
  </node>

  <node name="player" pkg="rosbag" type="play" output="screen" args=" -r 0.5 -s 0 -q --clock --pause /home/youliang/rosbag/imu_office_large.bag  /imu/imu:=/imu_null"/>

  <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find loam_velodyne)/rviz_cfg/loam_velodyne.rviz" />
  </group>
  
  <!--
  <include file="/home/kevin/catkin_segmap/src/segmap/segmapper/launch/kitti/kitti_get_segments.launch"/>
  -->

</launch>
